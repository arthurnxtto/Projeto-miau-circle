<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClimaActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:backgroundTint="#5A32AC">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextAssam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assam"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                />

            <TextView
                android:id="@+id/idTextCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTextAssam"
                android:text="Current Location"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idTextCurrent"
                android:text="25°"
                android:textColor="@color/white"
                android:layout_marginLeft="50dp"
               android:textSize="40dp"
                android:id="@+id/idTextGrau"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTextCurrent"
                android:text="-> 18°"
                android:textColor="@color/white"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@+id/idTextGrau"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:id="@+id/idTextSeta"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cloud"
                android:layout_toRightOf="@+id/idTextCurrent"
                android:layout_marginLeft="70dp"
                android:tint="@color/white"
                android:layout_marginTop="30dp"
                android:id="@+id/idImgNuvem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idImgNuvem"
                android:text="11:25 AM"
                android:textColor="@color/white"
                android:layout_marginLeft="110dp"
                android:layout_toRightOf="@+id/idTextSeta"

                android:layout_marginTop="5dp"
                android:textSize="20dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>